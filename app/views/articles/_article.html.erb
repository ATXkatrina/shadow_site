<%= link_to "#{article.title}", article_path(article), class: "ui  blue header" %>
<p>By <%= article.user.email %> | <%= article.created_at.strftime("%b %e, %Y, at %I:%M %P") %>
  <% if current_user.is_admin %>
    <%= link_to 'Edit', edit_article_path(article) %> |
    <%= link_to 'Delete', edit_article_path(article),
  method: :delete,
  data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>
<p><%= article.text %></p>